{
  "name": "prx-workspace",
  "version": "2.0.0",
  "description": "projax - Cross-platform project management dashboard with CLI and web interface",
  "author": "Jose Viscasillas <viscasillas@me.com>",
  "repostory": {
    "type": "git",
    "url": "https://github.com/josetwentyfour/projax.git"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:core && npm run build:api && npm run build:cli && npm run build:desktop && npm run build:prxi && npm run build:docsite",
    "build:core": "npm run build --workspace=packages/core",
    "build:api": "npm run build --workspace=packages/api",
    "build:cli": "npm run build --workspace=packages/cli",
    "build:desktop": "npm run build --workspace=packages/desktop",
    "build:prxi": "npm run build --workspace=packages/prxi",
    "build:docsite": "npm run build --workspace=packages/docsite",
    "dev:desktop": "npm run dev --workspace=packages/desktop",
    "dev:api": "npm run dev --workspace=packages/api",
    "dev:prxi": "npm run dev --workspace=packages/prxi",
    "dev:docsite": "npm run start --workspace=packages/docsite",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "postinstall": "npm run build:core && npm run build:api",
    "version": "node scripts/bump-version.js",
    "version:patch": "node scripts/bump-version.js patch",
    "version:minor": "node scripts/bump-version.js minor",
    "version:major": "node scripts/bump-version.js major",
    "release": "node scripts/release.js",
    "release:patch": "echo 'patch' | node scripts/release.js",
    "release:minor": "echo 'minor' | node scripts/release.js",
    "release:major": "echo 'major' | node scripts/release.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
